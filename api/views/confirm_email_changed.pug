extends base

block content
  p.text-lg Hi #{name},
  p.text-lg.font-light.my-6 To complete the process of changing your personal info, you must confirm your info below:
  form(action=`${url}`, method="post" target="_blank")
    .grid.grid-cols-10.gap-2.items-center.mb-2
      label.col-span-3.text-lg.text-red-600 Legal name: 
      input.col-span-7.input-info.w-full(value=`${name}` name="name" type="text" readonly)
    .grid.grid-cols-10.gap-2.items-center.mb-2
      label.col-span-3.text-lg.text-red-600 Email
      input.col-span-7.input-info.w-full(value=`${email}` name="email" type="text" readonly)
    .grid.grid-cols-10.gap-2.items-center.mb-2
      label.col-span-3.text-lg.text-red-600 Phone
      input.col-span-7.input-info.w-full(value=`${phone}` name="phone" type="text" readonly)
    .flex
      p.text-lg.text-red-600 Emergency Contanct
      .pl-6
        .flex.justify-between.items-center
          .my-1
            label Name
            input.input-info.w-full(value=`${ec_name}` name="emergency_contact.name" type="text" readonly)
          .my-1
            label Relationship
            input.input-info.w-full(value=`${ec_relation_ship}` name="emergency_contact.relation_ship" type="text" readonly)
        .my-1
          label Email
          input.input-info.w-full(value=`${ec_email}` name="emergency_contact.email" type="text" readonly)
        .my-1
          label Phone
          input.input-info.w-full(value=`${ec_phone}` name="emergency_contact.phone" type="text" readonly)
    button.block.btn.btn-link.text-center.mt-10(type="submit") Confirm
  .h-1.bg-gray-200.w-full.my-10
  p.text-lg.font-light.my-6 If you didn't do this, please check the review email we just sent you.